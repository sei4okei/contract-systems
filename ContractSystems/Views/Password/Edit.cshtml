@model Record
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Password</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Edit Password</h1>
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="RecordDate" value="@Model.RecordDate" />
            <div class="form-group">
                <label asp-for="Title">Name</label>
                <input asp-for="Title" type="text" name="Title" class="form-control" id="Title" required>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" name="Password" class="form-control" id="Password" required minlength="8">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="typeSelect">Type</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="IsEmail" type="radio" name="IsEmail" id="IsEmail" value="false">
                        <label class="form-check-label" asp-for="IsEmail">Website</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="IsEmail" type="radio" name="IsEmail" id="IsEmail" value="true">
                        <label class="form-check-label" asp-for="IsEmail">Email</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" asp-action="Edit" asp-controller="Password" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
